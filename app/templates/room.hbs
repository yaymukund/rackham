<div id="room">
  {{music-file room=content track=currentTrack}}

  <div class="main">
    {{#if currentTrack.coverImageUrl}}
      <img class="album-cover" {{bind-attr src="currentTrack.coverImageUrl"}}>
    {{else}}
      <div class="no-album-cover">Cover not found</div>
    {{/if}}

    <div class="playlist">
      {{render 'tracks'}}
      {{ view 'mp3-upload'}}
    </div>
  </div>
</div>
